{
  "manifest_version": 2,

  "name": "XKCD Browser",
  "short_name": "XKCD-B",
  "description": "Browse XKCD within a navigation popup!",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png"
  },
  "permissions": [
    "http://xkcd.com/*"
  ]
}
